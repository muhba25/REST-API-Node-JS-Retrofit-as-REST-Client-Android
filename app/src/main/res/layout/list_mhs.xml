<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_gravity="center"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_mhs"
            android:layout_width="105dp"
            android:layout_height="133dp"
            android:scaleType="centerCrop"
            tools:src="@color/colorAccent" />


        <TextView
            android:id="@+id/tv_nim"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nama_mhs"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/iv_mhs"
            android:layout_toRightOf="@id/iv_mhs"
            android:textSize="12sp"
            android:textStyle="italic"
            tools:text="@string/nim" />

        <TextView
            android:id="@+id/tv_nama_mhs"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@id/iv_mhs"
            android:layout_toRightOf="@id/iv_mhs"
            android:maxLines="2"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="@string/nama_lengkap" />

        <TextView
            android:id="@+id/tv_alamat"
            android:layout_width="159dp"
            android:layout_height="43dp"
            android:layout_below="@+id/tv_nim"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/iv_mhs"
            android:layout_toRightOf="@id/iv_mhs"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="12dp"
            tools:text="@string/alamat" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="52dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@+id/tv_nim"
            android:background="#fff"
            android:drawableTop="@drawable/ic_cloud_upload_black_24dp" />

        <EditText
            android:id="@+id/etuid"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="28dp" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btnUpdate"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="51dp"
            android:layout_marginTop="18dp"
            android:text=""
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/tv_nim"
            android:background="#fff"
            android:drawableTop="@drawable/ic_close_black_24dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>